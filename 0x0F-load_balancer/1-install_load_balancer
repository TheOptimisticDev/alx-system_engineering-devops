#!/usr/bin/env bash
# Installs, configures, and starts the load balancer
sudo apt-get update
sudo apt-get -y install --no-install-recommends software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.4
sudo apt-get -y install haproxy

# the load balancer's configuration
DOMAIN_NAME='optimisticunderdog.tech'
INIT_FILE='/etc/default/haproxy'
CONFIG_FILE='/etc/haproxy/haproxy.cfg'
HAPROXY_LB_CONFIG=\
"
#--optimisticunderdog-params-begin--
backend optimisticunderdog-backend
        balance roundrobin
        server web-01 54.146.75.232:80 check
        server web-02 34.207.227.49:80 check
frontend optimisticunderdog-frontend
        bind *:80
        option forwardfor
        default_backend optimisticunderdog-backend
#--optimisticunderdog-params-end--
sed -i "20i \\\n$frontend_configuration\n$backend_configuration" /etc/haproxy/haproxy.cfg
sudo service haproxy restart
